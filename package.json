{
  "name": "mintbean-api",
  "version": "1.0.0",
  "main": "src/main.js",
  "author": "Monarch Wadia",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/main.ts",
    "dev": "(cd dev/db && docker-compose up -d) && MB_ENV_FILE=dev/dev.env nodemon -e graphql,js,ts src/main.ts",
    "test": "MB_ENV_FILE=dev/test.env yarn test:jest",
    "test:jest": "jest",
    "knex": "MB_ENV_FILE=dev/dev.env knex --knexfile=./dev/db/dev.knexfile.ts",
    "knex:prod": "MB_ENV_FILE=/etc/mintbean-v4/config/prod.env knex --knexfile /etc/mintbean-v4/config/prod.env",
    "knex:test": "MB_ENV_FILE=dev/test.env knex --knexfile ./dev/test/test.knexfile.ts",
    "pristine": "dev/db/init-db.sh && yarn knex migrate:latest && yarn knex seed:run && yarn knex:test migrate:latest && yarn knex:test seed:run",
    "lint": "tsc --noEmit && prettier --check .",
    "dev:generate-dataset": "ts-node dev/test/datasetGenerator.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-session": "^2.0.42",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.23",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.11",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6"
  },
  "dependencies": {
    "@types/graphql-depth-limit": "^1.1.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cookie-session": "^1.4.0",
    "dataloader": "^2.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "faker": "^5.5.3",
    "glob": "^7.1.7",
    "graphql": "^15.5.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tools": "^7.0.5",
    "knex": "^0.95.6",
    "pg": "^8.6.0",
    "ts-node": "^9.1.1",
    "type-fest": "^1.1.3",
    "typescript": "^4.2.4"
  }
}
